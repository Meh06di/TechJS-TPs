doctype html
html
  head
    title Liste des livres
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
  body(class="bg-gray-100 min-h-screen flex flex-col items-center justify-center")
    div(class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-md text-center")
      h2(class="text-2xl font-bold text-gray-800 mb-4") Bienvenue #{user.username} !
      h3(class="text-xl text-gray-700 mb-4") Liste des livres disponibles :
      ul(class="text-left mb-6 space-y-2")
        each book in books
          li(class="p-3 bg-gray-50 rounded-lg shadow-sm hover:bg-gray-100 transition")
            strong(class="text-indigo-600") #{book.title}
            |  – #{book.author}
      a(href="/logout" class="inline-block bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition") Se déconnecter
